{
  "name": "boilerplate",
  "description": "boilerplate",
  "version": "1.0.0",
  "author": "sato",
  "scripts": {
    "clean:html": "rimraf wp-content/themes/mytheme/**/*.html",
    "clean:css": "rimraf wp-content/themes/mytheme/**/*.css",
    "clean:js": "rimraf wp-content/themes/mytheme/js",
    "clean:img": "rimraf wp-content/themes/mytheme/img",
    "build:pug": "pug --out wp-content/themes/mytheme --basedir src/pug --pretty src/pug",
    "build:pcss": "postcss src/pcss/style.pcss --map --output wp-content/themes/mytheme/style.css",
    "build:js": "webpack",
    "build:img": "cpx 'src/img/**/*.{gif,jpg,png,svg,ico}' 'wp-content/themes/mytheme/img/'",
    "watch:pug": "chokidar 'src/pug/**/*.pug' -c 'npm run build:pug'",
    "watch:pcss": "chokidar 'src/pcss/**/*.pcss' -c 'npm run build:pcss'",
    "watch:js": "chokidar 'src/js/**/*.js' -c 'npm run build:js'",
    "watch:img": "chokidar 'src/img/**/*.{gif,jpg,png,svg,ico}' -c 'npm run build:img'",
    "server": "browser-sync start --config bs-config.js",
    "start": "npm-run-all --parallel clean:* build:* watch:* server"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.7",
    "chokidar": "^3.2.3",
    "chokidar-cli": "^2.0.0",
    "cpx": "^1.5.0",
    "intersection-observer": "^0.7.0",
    "jquery": "^3.4.1",
    "mkdirp": "^0.5.1",
    "node-notifier": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.10",
    "postcss-calc": "^7.0.1",
    "postcss-cli": "^6.1.3",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-flow-root": "^0.0.3",
    "postcss-grid-kiss": "^2.2.0",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-pseudoelements": "^5.0.0",
    "postcss-will-change": "^3.0.0",
    "pug": "^2.0.4",
    "pug-cli": "github:pugjs/pug-cli#master",
    "ress": "^2.0.1",
    "rimraf": "^3.0.0",
    "slick-carousel": "^1.8.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  },
  "license": "MIT",
  "repository": {},
  "dependencies": {}
}
